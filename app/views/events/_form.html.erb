<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :date %><br>
      <%= f.datetime_select :date %>
    </div>
    <div class="field">
      <%= f.label :requirement_id %><br>
      <%= f.collection_select :requirement_id, Requirement.order(:id), :id, :name %>
    </div>
    <div class="field">
      <%= f.label :requirement_progress %><br>
      <%= f.number_field :requirement_progress, min: 0 %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
