<div class="content">
  <h1>Academics</h1>
  <ul class="list-group">
    <% @requirement.each do |r| %>
        <li class="list-group-item">
          <span class="label label-default">1.1</span>
          <span class="description"><%= r.name %></span>
          <div class="pull-right circularProgressBorder">
            <div class="pull-right">
              <%
                percentComplete	= r.amt_complete.to_f/r.amt_goal
              %>
              <div class="circularProgress --<%= (percentComplete * 100).to_i %> pull-right">
                <div class="circularProgress__overlay"></div>
              </div>
            </div>
            <p class="pull-right"><%= r.amt_complete.truncate %>/<%= r.amt_goal.truncate %>&nbsp;</p>&nbsp;
          </div>
    <% end %>
  </ul>
</div>