<%= form_for @checkpoint, :html => { :class => "form-horizontal checkpoint" } do |f| %>

  <% if @checkpoint.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@checkpoint.errors.count, "error") %> prohibited this checkpoint from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @checkpoint.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :comment, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :comment, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comment) %>
  </div>
  <div class="form-group">
    <%= f.label :completion_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :completion_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:completion_date) %>
  </div>
  <div class="form-group">
    <%= f.label :requirement_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :requirement_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:requirement_id) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :group_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :group_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:group_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                checkpoints_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
