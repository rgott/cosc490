<%= form_for(@checkpoint) do |f| %>
  <% if @checkpoint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@checkpoint.errors.count, "error") %> prohibited this checkpoint from being saved:</h2>

      <ul>
      <% @checkpoint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :completion_date %><br>
    <%= f.datetime_select :completion_date %>
  </div>
  <div class="form-group">
    <%= f.label :requirement_id %><br>
    <%= f.collection_select :requirement_id, Requirement.where(:is_event_oriented => 0).order(:id) , :id, :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="form-group">
    <%= f.label :user_id %> (This will be autogenerated in production)<br>
    <%= f.number_field :user_id, :value => 1 %>
  </div>
  <div class="form-group">
    <%= f.label :group_id %> (This will be autogenerated in production)<br>
    <%= f.number_field :group_id, :value => 1 %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
