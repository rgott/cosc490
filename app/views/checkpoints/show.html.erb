<%- model_class = Checkpoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:completion_date) %>:</strong></dt>
  <dd><%= @checkpoint.completion_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:requirement_id) %>:</strong></dt>
  <dd><%= Requirement.find_by_id(@checkpoint.requirement_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @checkpoint.comment %></dd>
</dl>



<%= link_to t('.back', :default => t("helpers.links.back")),
            checkpoints_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_checkpoint_path(@checkpoint), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            checkpoints_path(@event),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger' %>
