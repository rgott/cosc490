<%- model_class = Checkpoint -%>
<div class="container">

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:requirement_id) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:completion_date) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:group_id) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkpoints.each do |checkpoint| %>
      <tr>
        <td><%= Requirement.find_by_id(checkpoint.requirement_id).name %></td>
        <td><%= checkpoint.comment %></td>
        <td><%= checkpoint.completion_date %></td>
        <td>
            <%= User.find_by_id(checkpoint.user_id).first_name %>
            <%= User.find_by_id(checkpoint.user_id).last_name %>
        </td>
        <td><%= Group.find_by_id(checkpoint.group_id).name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_checkpoint_path(checkpoint), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      checkpoint_path(checkpoint),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_checkpoint_path,
              :class => 'btn btn-success' %>

</div>