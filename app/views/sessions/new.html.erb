<div class="container">

  <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag :action => 'create' do %>
  <fieldset>
    <legend>Login</legend>
    <div class="form-group">
      <%=	label_tag :email, 'Email', :class => 'control-label' %>
      <br/>
      <%=	email_field_tag :email, params[:email], :class => 'form-control', :style => 'max-width:200px;'%>
    </div>
    <div class="form-group">
      <%=	label_tag :password, 'Password',:class => 'control-label' %>
      <br/>
      <%=	password_field_tag :password, params[:password], :class => 'form-control', :style => 'max-width:200px;' %>
    </div>
    <div>
      <%= submit_tag 'Login', :class => 'btn btn-primary'  %>
    </div>
  </fieldset>
  <% end %>
</div>